{
  "name": "ai-file-transformer",
  "displayName": "AI File Transformer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-file-transformer",
          "title": "AI File Transformer",
          "icon": "media/transformer.svg"
        }        
      ]
    },
    "views": {
      "ai-file-transformer": [
        {
          "id": "treeTransformer",
          "name": "Tree Transformer"
        },
        {
          "type": "webview",
          "id": "viewEditTransformer",
          "name": "Edit Transformer",
          "icon": "media/transformer.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "treeTransformer.selectItem",
        "title": "Select Item"
      },
      {
        "command": "ai-file-transformer.showPanel",
        "title": "AI File Transformer: Show Panel"
      },
      {
        "command": "ai-file-transformer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "ai-file-transformer.openTransformerManager",
        "title": "Open Transformer Manager",
        "icon": "$(preview)"
      },
      {
        "command": "ai-file-transformer.addTransformer",
        "title": "Add Transformer",
        "icon": "$(add)"
      },
      {
        "command": "ai-file-transformer.editTransformer",
        "title": "Edit Transformer"
      },
      {
        "command": "ai-file-transformer.executeTransformer",
        "title": "Execute Transformer",
        "icon": "$(play)"
      },
      {
        "command": "ai-file-transformer.deleteTransformer",
        "title": "Delete Transformer",
        "icon": "$(trash)"
      },
      {
        "command": "ai-file-transformer.duplicateTransformer",
        "title": "Duplicate Transformer",
        "icon": "$(files)"
      },
      {
        "command": "ai-file-transformer.openSettings",
        "title": "Open Settings",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ai-file-transformer.refresh",
          "when": "view == transformers",
          "group": "navigation"
        },
        {
          "command": "ai-file-transformer.openTransformerManager",
          "when": "view == transformers",
          "group": "navigation@1"
        },
        {
          "command": "ai-file-transformer.addTransformer",
          "when": "view == transformers",
          "group": "navigation@2"
        },
        {
          "command": "ai-file-transformer.openSettings",
          "when": "view == settings",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ai-file-transformer.executeTransformer",
          "when": "view == transformers && viewItem == transformer",
          "group": "inline"
        },
        {
          "command": "ai-file-transformer.editTransformer",
          "when": "view == transformers && viewItem == transformer",
          "group": "1_modification@1"
        },
        {
          "command": "ai-file-transformer.deleteTransformer",
          "when": "view == transformers && viewItem == transformer",
          "group": "1_modification@2"
        },
        {
          "command": "ai-file-transformer.duplicateTransformer",
          "when": "view == transformers && viewItem == transformer",
          "group": "1_modification@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
